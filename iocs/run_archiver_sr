#!/bin/sh

# Runs the FA archiver for the storage ring.  This runs on fa-archiver server.

ARCHIVE_FILE=/dev/mapper/vg2-sniffer1
SNIFFER_DEV=/dev/fa_sniffer0

ARCHIVE_ARGS='-X -c filters/decimate.config'

cd "$(dirname "$0")"/..
exec build/$(uname -m)/fa-archiver \
    $* $ARCHIVE_ARGS -d "$SNIFFER_DEV" "$ARCHIVE_FILE"
